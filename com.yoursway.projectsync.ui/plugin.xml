<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.2"?>
<plugin>
   <extension
         point="org.eclipse.ui.handlers">
      <handler
            class="com.yoursway.projectsync.ui.handlers.SynchronizeNowHandler"
            commandId="com.yoursway.projectsync.ui.commands.syncNow">
      </handler>
      <handler
            class="com.yoursway.projectsync.ui.handlers.ConfigureSynchronizationHandler"
            commandId="com.yoursway.projectsync.ui.commands.configureSync">
      </handler>
   </extension>
