<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.2"?>
<plugin>
   <extension
         point="org.eclipse.ui.handlers">
      <handler
            class="com.yoursway.projectsync.ui.handlers.SynchronizeNowHandler"
            commandId="com.yoursway.projectsync.ui.commands.syncNow">
      </handler>
      <handler
            class="com.yoursway.projectsync.ui.handlers.ConfigureSynchronizationHandler"
            commandId="com.yoursway.projectsync.ui.commands.configureSync">
      </handler>
   </extension>
   <!--
   <extension
         point="org.eclipse.ui.bindings">
      <key
            commandId="com.yoursway.projectsync.ui.commands.sampleCommand"
            contextId="org.eclipse.ui.contexts.window"
            schemeId="org.eclipse.ui.defaultAcceleratorConfiguration"
            sequence="M1+6">
      </key>
   </extension>
   -->
   <extension
         point="org.eclipse.ui.menus">
      <menuContribution
            locationURI="menu:project?after=additions">
         <separator
               name="com.yoursway.projectsync.ui.separator1"
               visible="true">
         </separator>
         <command
               commandId="com.yoursway.projectsync.ui.commands.syncNow"
               id="com.yoursway.projectsync.ui.menus.syncNow"
               mnemonic="S">
         </command>
         <command
               commandId="com.yoursway.projectsync.ui.commands.configureSync"
               id="com.yoursway.projectsync.ui.menus.configureSync"
               mnemonic="U">
         </command>
      </menuContribution>
   </extension>
   <extension
         point="org.eclipse.ui.commands">
      <category
            id="com.yoursway.projectsync.ui.commands.category"
            name="ProjectSync">
      </category>
      <command
            categoryId="com.yoursway.projectsync.ui.commands.category"
            id="com.yoursway.projectsync.ui.commands.syncNow"
            name="ProjectSync: Add Missing and Move Misplaced Projects">
      </command>
      <command
            categoryId="com.yoursway.projectsync.ui.commands.category"
            id="com.yoursway.projectsync.ui.commands.configureSync"
            name="ProjectSync: Configure Folder...">
      </command>
   </extension>

</plugin>
