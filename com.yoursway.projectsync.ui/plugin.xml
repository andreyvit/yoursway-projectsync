            contextId="org.eclipse.ui.contexts.window"
            schemeId="org.eclipse.ui.defaultAcceleratorConfiguration"
            sequence="M1+6">
      </key>
   </extension>
   -->
   <extension
         point="org.eclipse.ui.menus">
      <menuContribution
            locationURI="menu:org.eclipse.ui.main.menu?after=additions">
         <menu
               id="com.yoursway.projectsync.ui.menus.project"
               label="Project"
               mnemonic="P">
            <command
                  commandId="com.yoursway.projectsync.ui.commands.syncNow"
                  id="com.yoursway.projectsync.ui.menus.syncNow"
                  mnemonic="S">
            </command>
            <command
                  commandId="com.yoursway.projectsync.ui.commands.configureSync"
                  id="com.yoursway.projectsync.ui.menus.configureSync"
                  mnemonic="U">
            </command>
         </menu>
      </menuContribution>
   </extension>
   <extension
         point="org.eclipse.ui.commands">
      <category
            id="com.yoursway.projectsync.ui.commands.category"
            name="ProjectSync">
      </category>
      <command
            categoryId="com.yoursway.projectsync.ui.commands.category"
            id="com.yoursway.projectsync.ui.commands.syncNow"
            name="ProjectSync: Synchronize Now">
      </command>
      <command
            categoryId="com.yoursway.projectsync.ui.commands.category"
            id="com.yoursway.projectsync.ui.commands.configureSync"
            name="ProjectSync: Configure Synchronization...">
      </command>
   </extension>

</plugin>
